# Environment Variables Example
# Copy this file to .env.local and add your actual values

# API Configuration
NEXT_PUBLIC_USE_MOCK=true
NEXT_PUBLIC_API_BASE=https://api.yourserver.com
OPENAI_API_KEY=sk-your_openai_api_key_here

# Firebase Analytics Configuration
# Get these values from your Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com

# Backend URL
# Production: https://tlm2laiw0j.execute-api.us-west-1.amazonaws.com
# Development: http://localhost:3001
NEXT_PUBLIC_BACKEND_URL=https://tlm2laiw0j.execute-api.us-west-1.amazonaws.com

